{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "watch": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    }
  },
  "lib": ["es2018"],
}
